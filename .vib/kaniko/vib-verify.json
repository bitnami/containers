{
  "context": {
    "resources": {
      "url": "{SHA_ARCHIVE}",
      "path": "{VIB_ENV_PATH}"
    },
    "runtime_parameters": "Y29tbWFuZDogWyJ0YWlsIiwgIi1mIiwgIi9kZXYvbnVsbCJd"
  },
  "phases": {
    "package": {
      "actions": [
        {
          "action_id": "container-image-package",
          "params": {
            "application": {
              "details": {
                "name": "{VIB_ENV_CONTAINER}",
                "tag": "{VIB_ENV_TAG}"
              }
            },
            "architectures": [
              "linux/amd64",
              "linux/arm64"
            ]
          },
          "size_thresholds": [
            {
              "size": "60MB",
              "kind": "COMPRESSED"
            }
          ]
        }
      ]
    },
    "verify": {
      "actions": [
        {
          "action_id": "goss",
          "params": {
            "resources": {
              "path": "/.vib"
            },
            "tests_file": "kaniko/goss/goss.yaml",
            "vars_file": "kaniko/goss/vars.yaml",
            "remote": {
              "pod": {
                "workload": "deploy-kaniko"
              }
            }
          }
        },
        {
          "action_id": "trivy",
          "params": {
            "threshold": "LOW",
            "vuln_type": [
              "OS"
            ]
          }
        },
        {
          "action_id": "grype",
          "params": {
            "threshold": "CRITICAL",
            "package_type": [
              "OS"
            ]
          }
        }
      ]
    }
  }
}
